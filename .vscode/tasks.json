{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and run (debug mode)",
            "type": "shell",
            "command": "./build.sh debug",
            "group": "build",
            "problemMatcher": ["$gcc"]
        },

        {
            "label": "Build and run (release mode)",
            "type": "shell",
            "command": "./build.sh release",
            "group": "build",
            "problemMatcher": ["$gcc"]
        },

        {
            "label": "Build only (debug mode)",
            "type": "shell",
            "command": "./build.sh debug-build-only",
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}